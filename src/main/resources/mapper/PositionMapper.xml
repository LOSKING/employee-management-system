<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.emp.mapper.PositionMapper">
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.example.emp.entity.Position">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <!-- 查询所有职位 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM position ORDER BY id
    </select>
    
    <!-- 根据ID查询职位 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM position WHERE id = #{id}
    </select>
    
    <!-- 新增职位 -->
    <insert id="insert" parameterType="com.example.emp.entity.Position" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO position (name, description)
        VALUES (#{name}, #{description})
    </insert>
    
    <!-- 更新职位 -->
    <update id="update" parameterType="com.example.emp.entity.Position">
        UPDATE position
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
        </set>
        WHERE id = #{id}
    </update>
    
    <!-- 删除职位 -->
    <delete id="deleteById">
        DELETE FROM position WHERE id = #{id}
    </delete>
</mapper>