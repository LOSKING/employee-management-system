<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.emp.mapper.DepartmentMapper">
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.example.emp.entity.Department">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <!-- 查询所有部门 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM department ORDER BY id
    </select>
    
    <!-- 根据ID查询部门 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM department WHERE id = #{id}
    </select>
    
    <!-- 新增部门 -->
    <insert id="insert" parameterType="com.example.emp.entity.Department" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO department (name, description)
        VALUES (#{name}, #{description})
    </insert>
    
    <!-- 更新部门 -->
    <update id="update" parameterType="com.example.emp.entity.Department">
        UPDATE department
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
        </set>
        WHERE id = #{id}
    </update>
    
    <!-- 删除部门 -->
    <delete id="deleteById">
        DELETE FROM department WHERE id = #{id}
    </delete>
</mapper>